@import 'imports/variables'
@import 'imports/mixins'

.modal
  position fixed
  top 0
  left @top
  width 100vw
  height 100vh
  z-index 6
  overflow-y auto
  opacity 0
  visibility hidden
  transition opacity .3s, visibility .3s
  &.active
    opacity 1
    visibility visible
    article .container
      transform translateY(0)
  a.close-modal
    position absolute
    top 15px
    right @top
    z-index 2
    width 40px
    height @width
    cursor pointer
    &::before
      font-size 20px
      line-height 40px
      text-align center
      display block
      @extend .ct-primary_alt
    &::after
      position absolute
      top 50%
      left @top
      content ''
      width 100%
      height @width
      border 1px solid $color_solid_primary_alt
      border-radius 50%
      transform translate(-50%, -50%)
      transition transform .3s
    &:hover::after
      transform translate(-50%, -50%) scale(1.5)
  article
    position relative
    width calc(100% - 50px)
    min-height calc(100% - 50px)
    padding 25px
    z-index 1
    flex_content(false)
    justify-content flex-start
    align-items center
    .container
      position relative
      width 24%
      max-width 935px
      height 90%
      flex_content(true, false)
      transition transform .3s
      transform translateY(10px)
      justify-content center
      flex-direction column
  &.comparative
    background-color white
    background-image url("../assets/img/icons/patron-contacto.svg")
    background-size: cover;
    width: 100%;
    height: 100%;
    &:before
      content ''
      position absolute
      background-color #75702c
      opacity 0.1
      width: 100%;
      height: 100%;
