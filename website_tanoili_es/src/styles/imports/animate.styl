@keyframes loadingLoop
    0%
        transform scale(0,1)
        transform-origin left
    40%
        transform scale(1,1)
        transform-origin left
    41%
        transform-origin right
        transform scale(1,1)
    81%
        transform scale(0,1)
        transform-origin right
    82%
        transform-origin left
        transform scale(0,1)

.animate.loading
    animation-duration 2s
    animation-iteration-count 1
    animation-name loadingLoop
    animation-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)

.animate.loading.loop
    @extend .animate.loading
    animation-iteration-count infinite